<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:isScrollContainer="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/categories"
                android:id="@+id/categorytext" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/foodbutton"
                android:layout_marginTop="35dp"
                android:src="@drawable/foodcategory"
                android:contentDescription="@string/food"
                android:scaleType="fitXY"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/clothingbutton"
                android:layout_marginTop="1dp"
                android:src="@drawable/clothingcategory"
                android:contentDescription="@string/clothing"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@null" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/eventbutton"
                android:layout_marginTop="1dp"
                android:layout_gravity="center|top"
                android:src="@drawable/eventscategory"
                android:contentDescription="@string/events"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@null" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/travelbutton"
                android:layout_marginTop="1dp"
                android:layout_gravity="center|top"
                android:src="@drawable/travelcategory"
                android:contentDescription="@string/travel"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@null" />


            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/hotelsbutton"
                android:layout_marginTop="1dp"
                android:layout_gravity="center|top"
                android:src="@drawable/hotelscategory"
                android:contentDescription="@string/hotels"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@null" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/moviebutton"
                android:layout_marginTop="1dp"
                android:layout_gravity="center|top"
                android:src="@drawable/moviecategory"
                android:contentDescription="@string/movies"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@null" />


            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/servicesbutton"
                android:layout_marginTop="1dp"
                android:layout_gravity="center|top"
                android:src="@drawable/servicesactegory"
                android:contentDescription="@string/services"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@null" />
            </LinearLayout>
    </ScrollView>
</LinearLayout>

